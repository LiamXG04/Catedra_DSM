<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.catedra_dsm">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="CinePlus"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinePlus">

        <!-- Pantalla principal al iniciar la app -->
        <activity android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras pantallas -->
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.DetallePeliculaActivity" />
        <activity android:name=".view.SeleccionAsientosActivity" />
        <activity android:name=".view.GolosinasActivity" />
        <activity android:name=".view.CarritoActivity" />

    </application>
</manifest>
